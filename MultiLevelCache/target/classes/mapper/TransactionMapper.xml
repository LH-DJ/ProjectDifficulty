<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.multilevelcache.mapper.TransactionMapper">

    <!-- 結果映射 -->
    <resultMap id="BaseResultMap" type="com.multilevelcache.entity.Transaction">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="transaction_id" property="transactionId" jdbcType="VARCHAR"/>
        <result column="user_id" property="userId" jdbcType="VARCHAR"/>
        <result column="account_number" property="accountNumber" jdbcType="VARCHAR"/>
        <result column="transaction_type" property="transactionType" jdbcType="VARCHAR"/>
        <result column="amount" property="amount" jdbcType="DECIMAL"/>
        <result column="currency" property="currency" jdbcType="VARCHAR"/>
        <result column="description" property="description" jdbcType="VARCHAR"/>
        <result column="status" property="status" jdbcType="VARCHAR"/>
        <result column="created_at" property="createdAt" jdbcType="TIMESTAMP"/>
        <result column="updated_at" property="updatedAt" jdbcType="TIMESTAMP"/>
        <result column="deleted" property="deleted" jdbcType="INTEGER"/>
    </resultMap>

    <!-- 基礎字段 -->
    <sql id="Base_Column_List">
        id, transaction_id, user_id, account_number, transaction_type, amount, currency, 
        description, status, created_at, updated_at, deleted
    </sql>

    <!-- 根據交易ID查詢 -->
    <select id="selectByTransactionId" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM transaction
        WHERE transaction_id = #{transactionId} AND deleted = 0
    </select>

    <!-- 根據用戶ID查詢（按創建時間倒序） -->
    <select id="selectByUserIdOrderByCreatedAtDesc" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM transaction
        WHERE user_id = #{userId} AND deleted = 0
        ORDER BY created_at DESC
    </select>

    <!-- 根據用戶ID和時間範圍查詢 -->
    <select id="selectByUserIdAndDateRange" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM transaction
        WHERE user_id = #{userId} 
          AND created_at BETWEEN #{startTime} AND #{endTime}
          AND deleted = 0
        ORDER BY created_at DESC
    </select>

    <!-- 根據賬戶號碼查詢 -->
    <select id="selectByAccountNumber" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM transaction
        WHERE account_number = #{accountNumber} AND deleted = 0
        ORDER BY created_at DESC
    </select>

    <!-- 根據賬戶號碼和時間範圍查詢 -->
    <select id="selectByAccountNumberAndDateRange" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM transaction
        WHERE account_number = #{accountNumber}
          AND created_at BETWEEN #{startTime} AND #{endTime}
          AND deleted = 0
        ORDER BY created_at DESC
    </select>

    <!-- 分頁查詢 -->
    <select id="selectPage" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM transaction
        WHERE user_id = #{userId} AND deleted = 0
        ORDER BY created_at DESC
    </select>

    <!-- 統計用戶交易總數 -->
    <select id="countByUserId" resultType="java.lang.Long">
        SELECT COUNT(*)
        FROM transaction
        WHERE user_id = #{userId} AND deleted = 0
    </select>

    <!-- 統計賬戶交易總數 -->
    <select id="countByAccountNumber" resultType="java.lang.Long">
        SELECT COUNT(*)
        FROM transaction
        WHERE account_number = #{accountNumber} AND deleted = 0
    </select>

</mapper> 